<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prfileown"
    tools:context=".User.Profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toTopOf="@id/btm_nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:outlineAmbientShadowColor="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome "
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vetname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chandan."
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/email"
                android:text="Email Address"
                android:textColor="@color/txtclr1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ownemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:text="chandanbhopi123@gmail.com"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/contact"
                android:text="Contact No."
                android:textColor="@color/txtclr1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/owncontct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:text="9136538831"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/location"
                android:text="Address"
                android:textColor="@color/txtclr1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ownadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:text="Madh Island, Patil Lane,Malad West, Mumbai 61"/>

            <Button
                android:id="@+id/ownupdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp"
                android:backgroundTint="@color/txtclr1"
                android:text="UPDATE"
                android:textStyle="bold"
                android:textSize="20sp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btm_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/owner"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/txtclr"
        app:menu="@menu/btm_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>