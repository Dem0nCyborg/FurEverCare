<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/vet_login_bg"
    tools:context=".Vet_login.Vet_Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        android:outlineAmbientShadowColor="@color/vet"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/customedit_text">

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#3D84A8"/>

            <EditText
                android:id="@+id/v_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cst_edt_txt_vet"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="8dp" />

            <EditText
                android:id="@+id/v_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cst_edt_txt_vet"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:hint="Password"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="8dp" />

            <TextView
                android:id="@+id/v_tv_fgpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password ?"
                android:layout_margin="10dp"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>



            <Button
                android:id="@+id/v_lgn_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Login"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#3D84A8"
                app:cornerRadius = "20dp"/>

            <Button
                android:id="@+id/v_reg_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Register Now"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:backgroundTint="#3D84A8"
                app:cornerRadius = "20dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>